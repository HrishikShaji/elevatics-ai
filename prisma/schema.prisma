generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String  @id @default(cuid()) @map("_id") 
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?  
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
USER
ADMIN
}

enum Plan {
FREE
PREMIUM
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  role          Role     @default(USER)
  plan          Plan     @default(FREE)
  coins         Int      @default(3)
  accounts      Account[]
  sessions      Session[]
  flows         Flow[]
  report        Report[]
}

model VerificationToken {
  identifier String @id @map("_id")
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


model Report {
id String @id @default(cuid()) @map("_id")
name      String
createdAt DateTime @default(now())
data      String
userEmail String
user User @relation(fields: [userEmail],references: [email])
}

model Flow {
id String @id @default(cuid()) @map("_id")
name      String
createdAt DateTime @default(now())
flowData  String
userEmail String
user User @relation(fields: [userEmail],references: [email])
}
